<%= render "layouts/header" %>

<div class="pnr"> <div class="container"> <p>Add a new flight reservation or look up an existing reservation:</p><br />
	
		<%= form_for(@pnr) do |f| %>
		
			<div class="fields">
				<%= f.label :rcrd_loc, '*Confirmation #' %>
				<%= f.text_field :rcrd_loc %>
			
				<%= f.label :first_name, '*First Name' %>
				<%= f.text_field :first_name %>
		
				<%= f.label :last_name, '*Last Name' %>
				<%= f.text_field :last_name %>
	
				<%= f.label :email, '*Email' %>
				<%= f.text_field :email %>
	
				<%= f.label :a_list, 'A-List?' %>
				<%= f.check_box :a_list %>
			</div>
			
			<div class="errors">
				<%= @pnr.errors.first.second if @pnr.errors.any? %>
			</div>
			
			<div class="actions">
				<%= f.submit 'Submit' %>
			</div>
	
		<% end %>
	</div>
</div>